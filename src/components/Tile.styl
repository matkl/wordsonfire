.Tile
  pointer-events: none
  position: absolute
  transition: background-color 0.2s, transform 0.2s
  &__text
    animation: Tile 0.2s 0.2s backwards
    font-size: 0.5em
    font-weight: bold
    line-height: 2
    text-align: center
    width: 2em
  &--active
    background-color: rgba(0,0,0,0.5)

@keyframes Tile
  from
    transform: scale(0)
  to
    transform: scale(1)
